<div id="posterframe" class="row">
    <% if @photos.empty? %>
      <p>No photos were added to server yet.</p>
    <% end %>
    <% thumbs_params = { :format => "jpg", :height => 150, :width => 150, :class => "thumbnail inline" } %>
    <% @photos.each do |photo| %>
      <div class="photo pull-left">
        <h2><%= photo.title %></h2>
        <a href="<%= photo.image.url %>" target="_blank">
          <%= image_tag(photo.image.thumbnail.url, :class => "thumbnail inline") %>
        </a>
        <div class='selectphoto'>
          <%= form_for(photo, :url => admin_photos_path, :method => :POST) do |f| %>
            <%= f.hidden_field(:title) %>
            <%= f.hidden_field(:image) %>
            <%= f.hidden_field(:image_cache) %>
            
            <%= hidden_field_tag :admin_photo_id, f.object.id %>
            <%= hidden_field_tag :imageable_id, params[:img_id] %>
            <%= hidden_field_tag :imageable_type, params[:img_type] %>
             <%= hidden_field_tag :redirectturl, params[:redirectturl] %>
            <div class="form_controls">
              <%= f.submit "Select Photo" %>
              <% if @error %><span class="error"><%= @error %></span><% end %>
            </div>
          <% end%>
        </div>
        &nbsp;
      </div>
    <% end %>  
</div>

<script type="text/javascript">

 $('.selectphoto a').on('click', function(){ 
    debugger;
    $('.modal-backdrop').remove();
    $('#modal-holder').modal('hide');

    $('#admin_user_photo')= $(this).parent().find('input');
   
  });
</script>


